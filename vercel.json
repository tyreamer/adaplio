{
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "outputDirectory": "src/Frontend/Adaplio.Frontend/bin/Release/net8.0/publish/wwwroot",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://adaplio-api-production.up.railway.app/api/$1"
    },
    {
      "source": "/auth/(.*)",
      "destination": "https://adaplio-api-production.up.railway.app/auth/$1"
    },
    {
      "source": "/client/(.*)",
      "destination": "https://adaplio-api-production.up.railway.app/client/$1"
    },
    {
      "source": "/trainer/(.*)",
      "destination": "https://adaplio-api-production.up.railway.app/trainer/$1"
    },
    {
      "source": "/gamification/(.*)",
      "destination": "https://adaplio-api-production.up.railway.app/gamification/$1"
    },
    {
      "source": "/health",
      "destination": "https://adaplio-api-production.up.railway.app/health"
    },
    {
      "source": "/((?!api/|auth/|client/|trainer/|gamification/|health).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|woff|woff2|ttf|svg|png|jpg|jpeg|gif|ico|webp)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_framework/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}