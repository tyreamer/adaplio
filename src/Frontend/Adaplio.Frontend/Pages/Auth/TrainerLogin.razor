@page "/auth/trainer/login"
@using System.ComponentModel.DataAnnotations
@using System.Net.Http.Json
@using Adaplio.Frontend.Services
@inject HttpClient Http
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject AuthStateService AuthState

<PageTitle>Trainer Login - Adaplio</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-16">
    <MudPaper Class="pa-8">
        <div class="d-flex flex-column align-center mb-6">
            <MudIcon Icon="@Icons.Material.Filled.LocalHospital" Size="Size.Large" Color="Color.Primary" />
            <MudText Typo="Typo.h4" Class="mt-2">Trainer Portal</MudText>
            <MudText Typo="Typo.body1" Color="Color.Secondary">
                Sign in to manage your clients and therapy plans
            </MudText>
        </div>

        <EditForm Model="@_model" OnValidSubmit="@LoginTrainer">
            <DataAnnotationsValidator />

            <MudStack Spacing="4">
                <MudTextField @bind-Value="_model.Email"
                              For="@(() => _model.Email)"
                              Label="Email Address"
                              Variant="Variant.Outlined"
                              InputType="InputType.Email"
                              Disabled="@_isLoading" />

                <MudTextField @bind-Value="_model.Password"
                              For="@(() => _model.Password)"
                              Label="Password"
                              Variant="Variant.Outlined"
                              InputType="InputType.Password"
                              Disabled="@_isLoading" />

                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Large"
                           FullWidth="true"
                           Disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        <text>Signing in...</text>
                    }
                    else
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-2" />
                        <text>Sign In</text>
                    }
                </MudButton>
            </MudStack>
        </EditForm>

        <MudDivider Class="my-6" />

        <div class="text-center">
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-2">
                Don't have an account?
            </MudText>
            <MudButton Variant="Variant.Text"
                       Color="Color.Primary"
                       Href="/auth/trainer/register">
                Create Trainer Account
            </MudButton>
        </div>

        <MudDivider Class="my-6" />

        <div class="text-center">
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-2">
                Are you a client?
            </MudText>
            <MudButton Variant="Variant.Text"
                       Color="Color.Primary"
                       Href="/auth/client/login">
                Sign in as Client
            </MudButton>
        </div>
    </MudPaper>
</MudContainer>

@code {
    private readonly LoginModel _model = new();
    private bool _isLoading = false;

    private async Task LoginTrainer()
    {
        _isLoading = true;
        try
        {
            var response = await Http.PostAsJsonAsync("/auth/trainer/login", _model);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AuthResponse>();

                // Update auth state
                if (result != null)
                {
                    var userInfo = new UserInfo
                    {
                        UserId = result.UserId ?? "",
                        Email = _model.Email,
                        UserType = result.UserType ?? "trainer"
                    };
                    await AuthState.SetUserAsync(userInfo, result.Token);
                }

                Snackbar.Add("Welcome back!", Severity.Success);
                Navigation.NavigateTo("/home");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Snackbar.Add("Invalid email or password.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add("Network error. Please check your connection.", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Please enter a valid email address")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = "";
    }

    public class AuthResponse
    {
        public string Message { get; set; } = "";
        public string? UserType { get; set; }
        public string? UserId { get; set; }
        public string? Alias { get; set; }
        public string? Token { get; set; }
    }
}