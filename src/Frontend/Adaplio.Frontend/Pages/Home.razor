@page "/"
@page "/home"
@layout EmptyLayout
@using Adaplio.Frontend.Services
@inject NavigationManager Navigation
@inject AuthStateService AuthState

<PageTitle>Welcome to Adaplio</PageTitle>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</head>
<body>
<div class="landing-page">
    <div class="main-content">
        <!-- Illustration -->
        <div class="illustration">
            <svg width="200" height="200" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
                <!-- Background -->
                <rect width="200" height="200" fill="#FFF9F0" rx="16"/>
                <!-- Person exercising on balance board -->
                <ellipse cx="100" cy="160" rx="50" ry="8" fill="#7FA89B" opacity="0.3"/>
                <!-- Balance board -->
                <path d="M65 160 Q 100 165 135 160" stroke="#4A7C7E" stroke-width="8" fill="none" stroke-linecap="round"/>
                <ellipse cx="100" cy="160" rx="35" ry="5" fill="#355E61"/>
                <!-- Person -->
                <!-- Legs -->
                <path d="M 95 130 L 85 155" stroke="#4A5568" stroke-width="8" stroke-linecap="round"/>
                <path d="M 105 130 L 115 155" stroke="#4A5568" stroke-width="8" stroke-linecap="round"/>
                <!-- Shoes -->
                <ellipse cx="85" cy="157" rx="8" ry="4" fill="#2D3748"/>
                <ellipse cx="115" cy="157" rx="8" ry="4" fill="#2D3748"/>
                <!-- Body -->
                <ellipse cx="100" cy="110" rx="18" ry="22" fill="#7FA89B"/>
                <!-- Arm (left) -->
                <path d="M 88 105 Q 70 95 65 85" stroke="#D4A574" stroke-width="6" stroke-linecap="round"/>
                <circle cx="65" cy="82" r="5" fill="#D4A574"/>
                <!-- Arm (right) -->
                <path d="M 112 115 L 125 110" stroke="#D4A574" stroke-width="6" stroke-linecap="round"/>
                <circle cx="127" cy="109" r="5" fill="#D4A574"/>
                <!-- Head -->
                <circle cx="100" cy="85" r="16" fill="#D4A574"/>
                <!-- Hair -->
                <path d="M 92 75 Q 100 68 108 75" fill="#2D3748"/>
                <path d="M 88 78 Q 85 70 92 72" fill="#2D3748"/>
                <path d="M 112 78 Q 115 70 108 72" fill="#2D3748"/>
                <!-- Plant decoration -->
                <path d="M 155 150 L 155 165" stroke="#5A8F7B" stroke-width="3"/>
                <ellipse cx="155" cy="145" rx="6" ry="10" fill="#5A8F7B"/>
                <ellipse cx="150" cy="148" rx="5" ry="8" fill="#5A8F7B"/>
                <ellipse cx="160" cy="148" rx="5" ry="8" fill="#5A8F7B"/>
            </svg>
        </div>

        <!-- Welcome Text -->
        <div class="welcome-section">
            <h1 class="main-title">Welcome to <span class="brand-name">Adaplio</span></h1>
            <p class="main-subtitle">Your path to recovery starts here.</p>
        </div>

        <!-- User Type Buttons -->
        <div class="user-type-buttons">
            <button class="user-button primary" @onclick="NavigateToClientLogin">I'm a Client</button>
            <button class="user-button secondary" @onclick="NavigateToTrainerSignup">I'm a Therapist</button>
        </div>

        <!-- Footer -->
        <div class="footer">
            <p class="footer-text">
                <a href="#" class="footer-link">Terms of Service</a>
                <span class="separator">|</span>
                <a href="#" class="footer-link">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>
</body>
</html>

<style>
/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.landing-page {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    background: #FFF9F0;
    min-height: 100vh;
    color: #1F2937;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

/* Main Content */
.main-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60px 24px;
    max-width: 600px;
    width: 100%;
}

/* Illustration */
.illustration {
    margin-bottom: 40px;
    animation: fadeIn 0.6s ease-in;
}

@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
}

/* Welcome Section */
.welcome-section {
    text-align: center;
    margin-bottom: 40px;
}

.main-title {
    font-size: 42px;
    font-weight: 700;
    color: #1F2937;
    margin-bottom: 12px;
    line-height: 1.2;
}

.brand-name {
    color: #FF6B35;
}

.main-subtitle {
    font-size: 18px;
    color: #6B7280;
    line-height: 1.6;
}

/* User Type Buttons */
.user-type-buttons {
    display: flex;
    flex-direction: column;
    gap: 16px;
    width: 100%;
    max-width: 400px;
    margin-bottom: 60px;
}

.user-button {
    width: 100%;
    padding: 16px 32px;
    border-radius: 12px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 2px solid transparent;
    font-family: inherit;
}

.user-button.primary {
    background: #FF6B35;
    color: white;
    border-color: #FF6B35;
}

.user-button.primary:hover {
    background: #E55A2E;
    border-color: #E55A2E;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3);
}

.user-button.secondary {
    background: transparent;
    color: #1F2937;
    border-color: #D1D5DB;
}

.user-button.secondary:hover {
    background: rgba(255, 107, 53, 0.05);
    border-color: #FF6B35;
    color: #FF6B35;
}

/* Footer */
.footer {
    text-align: center;
    padding: 20px 0;
}

.footer-text {
    font-size: 14px;
    color: #9CA3AF;
}

.footer-link {
    color: #9CA3AF;
    text-decoration: none;
    transition: color 0.2s ease;
}

.footer-link:hover {
    color: #FF6B35;
}

.separator {
    margin: 0 12px;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .main-content {
        padding: 40px 20px;
    }

    .main-title {
        font-size: 36px;
    }

    .main-subtitle {
        font-size: 16px;
    }

    .illustration svg {
        width: 180px;
        height: 180px;
    }
}

@@media (max-width: 480px) {
    .main-content {
        padding: 30px 16px;
    }

    .main-title {
        font-size: 32px;
    }

    .main-subtitle {
        font-size: 15px;
    }

    .user-button {
        padding: 14px 24px;
        font-size: 15px;
    }

    .illustration svg {
        width: 160px;
        height: 160px;
    }
}
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Initialize auth state if needed
        await AuthState.InitializeAsync();

        // Redirect authenticated users to their appropriate dashboard
        // unless they have a return URL
        if (AuthState.IsAuthenticated)
        {
            var uri = new Uri(Navigation.Uri);
            var returnUrl = System.Web.HttpUtility.ParseQueryString(uri.Query)["returnUrl"];

            if (!string.IsNullOrEmpty(returnUrl))
            {
                Navigation.NavigateTo(returnUrl, replace: true);
            }
            else if (AuthState.IsClient)
            {
                Navigation.NavigateTo("/home/client", replace: true);
            }
            else if (AuthState.IsTrainer)
            {
                Navigation.NavigateTo("/home/trainer", replace: true);
            }
        }
    }

    private void NavigateToTrainerSignup()
    {
        Navigation.NavigateTo("/auth/trainer/login");
    }

    private void NavigateToClientLogin()
    {
        Navigation.NavigateTo("/auth/client/login");
    }
}