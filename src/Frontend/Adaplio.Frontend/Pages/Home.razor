@page "/"

<PageTitle>Home - Adaplio</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to Adaplio</MudText>
<MudText Typo="Typo.body1" Class="mb-4">
    Your gamified physical therapy adherence app. Track your progress, stay motivated, and achieve your health goals.
</MudText>

<MudGrid>
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <div style="display: flex; justify-content: center">
                    <MudIcon Icon="@Icons.Material.Filled.FitnessCenter" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-2">Exercise Plans</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">
                    Access your personalized physical therapy plans
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <div style="display: flex; justify-content: center">
                    <MudIcon Icon="@Icons.Material.Filled.TrendingUp" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-2">Track Progress</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">
                    Monitor your adherence and improvement
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6" md="4">
        <MudCard>
            <MudCardContent>
                <div style="display: flex; justify-content: center">
                    <MudIcon Icon="@Icons.Material.Filled.EmojiEvents" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h6" Align="Align.Center" Class="mt-2">Achievements</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center">
                    Earn rewards and celebrate milestones
                </MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
