@page "/welcome"
@using Adaplio.Frontend.Theme
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<PageTitle>Adaplio - Your Partner in Physical Therapy</PageTitle>

<div class="welcome-page">
    <!-- Header Navigation -->
    <header class="top-nav">
        <div class="nav-content">
            <div class="brand-logo">
                <MudStack Row AlignItems="AlignItems.Center" Spacing="2">
                    <div class="logo-icon">ðŸ§¡</div>
                    <MudText Typo="Typo.h6" Class="brand-name">Adaplio</MudText>
                </MudStack>
            </div>
            <nav class="nav-links">
                <MudButton Variant="Variant.Text"
                           Class="nav-link"
                           Href="/auth/trainer/login">
                    For Therapists
                </MudButton>
                <MudButton Variant="Variant.Text"
                           Class="nav-link"
                           Href="/auth/client/login">
                    For Clients
                </MudButton>
                <MudButton Variant="Variant.Filled"
                           Class="get-started-btn"
                           Href="/">
                    Get Started
                </MudButton>
            </nav>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">
                    Adaplio: Your Partner in Physical Therapy
                </h1>
                <p class="hero-subtitle">
                    Connect with your therapist, track your progress, and
                    achieve your goals with our easy-to-use app.
                </p>
                <div class="hero-actions">
                    <MudButton Variant="Variant.Filled"
                               Class="primary-cta"
                               Href="/">
                        Get Started Free
                    </MudButton>
                    <MudButton Variant="Variant.Outlined"
                               Class="secondary-cta"
                               Href="#features">
                        Learn More
                    </MudButton>
                </div>
            </div>

            <div class="hero-visual">
                <div class="illustration-container">
                    <div class="exercise-illustration">
                        <!-- Character exercising -->
                        <div class="character">
                            <div class="character-body"></div>
                            <div class="character-head"></div>
                            <div class="character-arms"></div>
                        </div>
                        <!-- Exercise equipment -->
                        <div class="exercise-bench"></div>
                        <div class="weight-plates">
                            <div class="weight-plate red"></div>
                            <div class="weight-plate blue"></div>
                        </div>
                        <div class="water-bottle"></div>
                        <!-- Background circle -->
                        <div class="background-circle"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- How Adaplio Works Section -->
    <section class="features-section" id="features">
        <div class="section-content">
            <div class="features-header">
                <MudText Typo="Typo.h4" Align="Align.Center" Class="features-title">
                    How Adaplio Works
                </MudText>
                <MudText Typo="Typo.body1" Align="Align.Center" Class="features-subtitle">
                    Adaplio simplifies your physical therapy journey, connecting you with your therapist
                    and providing tools for effective at-home exercises and progress tracking.
                </MudText>
            </div>

            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon people">
                        <MudIcon Icon="@Icons.Material.Outlined.People" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h5" Class="feature-title">Connect with Your Therapist</MudText>
                    <MudText Typo="Typo.body1" Class="feature-description">
                        Find and connect with your physical
                        therapist through the app.
                    </MudText>
                </div>

                <div class="feature-card">
                    <div class="feature-icon heart">
                        <MudIcon Icon="@Icons.Material.Outlined.FavoriteBorder" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h5" Class="feature-title">Personalized Exercise Plans</MudText>
                    <MudText Typo="Typo.body1" Class="feature-description">
                        Receive customized exercise plans
                        tailored to your specific needs and goals.
                    </MudText>
                </div>

                <div class="feature-card">
                    <div class="feature-icon chart">
                        <MudIcon Icon="@Icons.Material.Outlined.TrendingUp" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h5" Class="feature-title">Track Your Progress</MudText>
                    <MudText Typo="Typo.body1" Class="feature-description">
                        Monitor your progress, celebrate
                        milestones, and stay motivated on your
                        path to recovery.
                    </MudText>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="welcome-footer">
        <div class="footer-content">
            <div class="footer-left">
                <MudText Typo="Typo.caption" Color="Color.Secondary">
                    Â© @DateTime.Now.Year Adaplio. All rights reserved.
                </MudText>
            </div>
            <div class="footer-right">
                <MudLink Href="/privacy" Class="footer-link">Privacy Policy</MudLink>
                <MudLink Href="/terms" Class="footer-link">Terms of Service</MudLink>
            </div>
        </div>
    </footer>
</div>

<style>
.welcome-page {
    min-height: 100vh;
    background: #F9F7F4; /* Cream background */
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
}

/* Top Navigation */
.top-nav {
    background: #F9F7F4;
    padding: 16px 0;
    position: sticky;
    top: 0;
    z-index: 100;
}

.nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.brand-logo {
    display: flex;
    align-items: center;
}

.logo-icon {
    font-size: 24px;
    margin-right: 8px;
}

.brand-name {
    font-size: 24px !important;
    font-weight: 600 !important;
    color: #1F2937 !important; /* Navy */
    margin: 0 !important;
}

.nav-links {
    display: flex;
    align-items: center;
    gap: 8px;
}

.nav-link {
    color: #6B7280 !important; /* Gray text */
    font-weight: 500 !important;
    text-transform: none !important;
    padding: 8px 16px !important;
}

.nav-link:hover {
    color: #1F2937 !important; /* Navy on hover */
}

.get-started-btn {
    background: #FF6B35 !important; /* Orange */
    color: white !important;
    border-radius: 24px !important;
    padding: 12px 24px !important;
    font-weight: 600 !important;
    text-transform: none !important;
    box-shadow: 0 2px 8px rgba(255, 107, 53, 0.2) !important;
}

.get-started-btn:hover {
    background: #E55A2E !important;
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.3) !important;
}

/* Hero Section */
.hero-section {
    padding: 80px 0;
    background: #F9F7F4;
}

.hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

.hero-text {
    max-width: 520px;
}

.hero-title {
    font-size: 48px;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 24px;
    color: #1F2937; /* Navy */
}

.hero-subtitle {
    font-size: 18px;
    line-height: 1.6;
    color: #6B7280; /* Gray */
    margin-bottom: 40px;
}

.hero-actions {
    display: flex;
    gap: 16px;
    margin-bottom: 40px;
}

.primary-cta {
    background: #FF6B35 !important; /* Orange */
    color: white !important;
    border-radius: 12px !important;
    padding: 16px 32px !important;
    font-size: 16px !important;
    font-weight: 600 !important;
    text-transform: none !important;
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.25) !important;
    border: none !important;
}

.primary-cta:hover {
    background: #E55A2E !important;
    box-shadow: 0 6px 16px rgba(255, 107, 53, 0.35) !important;
}

.secondary-cta {
    background: transparent !important;
    color: #FF6B35 !important; /* Orange text */
    border: 2px solid #FF6B35 !important; /* Orange border */
    border-radius: 12px !important;
    padding: 14px 30px !important;
    font-size: 16px !important;
    font-weight: 600 !important;
    text-transform: none !important;
}

.secondary-cta:hover {
    background: rgba(255, 107, 53, 0.05) !important;
}

/* Hero Visual - Exercise Illustration */
.hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
}

.illustration-container {
    width: 500px;
    height: 400px;
    position: relative;
}

.exercise-illustration {
    width: 100%;
    height: 100%;
    position: relative;
    background: white;
    border-radius: 24px;
    padding: 40px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    overflow: hidden;
}

.background-circle {
    position: absolute;
    top: -50px;
    right: -50px;
    width: 300px;
    height: 300px;
    background: #FED7AA; /* Light orange */
    border-radius: 50%;
    z-index: 1;
}

.character {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 3;
}

.character-head {
    width: 40px;
    height: 40px;
    background: #FBBF73; /* Skin tone */
    border-radius: 50%;
    position: absolute;
    top: -50px;
    left: 50%;
    transform: translateX(-50%);
}

.character-head::after {
    content: '';
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 45px;
    height: 25px;
    background: #8B4513; /* Hair */
    border-radius: 25px 25px 0 0;
}

.character-body {
    width: 60px;
    height: 80px;
    background: #4A90A4; /* Teal shirt */
    border-radius: 8px;
    position: relative;
}

.character-arms {
    position: absolute;
    top: 10px;
    left: -20px;
    right: -20px;
    height: 20px;
}

.character-arms::before,
.character-arms::after {
    content: '';
    position: absolute;
    width: 40px;
    height: 12px;
    background: #FBBF73; /* Arm color */
    border-radius: 6px;
    top: 0;
}

.character-arms::before {
    left: -15px;
    transform: rotate(-25deg);
}

.character-arms::after {
    right: -15px;
    transform: rotate(25deg);
}

.exercise-bench {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 20px;
    background: #94A3B8; /* Bench color */
    border-radius: 4px;
    z-index: 2;
}

.exercise-bench::before {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 10px;
    right: 10px;
    height: 15px;
    background: #64748B;
    border-radius: 2px;
}

.weight-plates {
    position: absolute;
    bottom: 20px;
    z-index: 2;
}

.weight-plate {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    position: absolute;
    bottom: 0;
}

.weight-plate.red {
    background: #EF4444;
    left: 60px;
}

.weight-plate.blue {
    background: #3B82F6;
    left: 100px;
}

.water-bottle {
    position: absolute;
    top: 60px;
    right: 40px;
    width: 12px;
    height: 30px;
    background: #60A5FA; /* Blue bottle */
    border-radius: 6px;
    z-index: 2;
}

.water-bottle::before {
    content: '';
    position: absolute;
    top: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 8px;
    height: 6px;
    background: #3B82F6;
    border-radius: 2px;
}

/* Features Section */
.features-section {
    padding: 80px 0;
    background: white;
}

.section-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

.features-header {
    text-align: center;
    margin-bottom: 64px;
}

.features-title {
    font-size: 36px !important;
    font-weight: 700 !important;
    color: #1F2937 !important; /* Navy */
    margin-bottom: 16px !important;
}

.features-subtitle {
    font-size: 16px !important;
    line-height: 1.6 !important;
    color: #6B7280 !important; /* Gray */
    max-width: 640px;
    margin: 0 auto;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 48px;
}

.feature-card {
    text-align: center;
    padding: 32px 24px;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
}

.feature-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px auto;
}

.feature-icon.people {
    background: rgba(255, 107, 53, 0.1); /* Light orange */
    color: #FF6B35 !important; /* Orange */
}

.feature-icon.heart {
    background: rgba(255, 107, 53, 0.1); /* Light orange */
    color: #FF6B35 !important; /* Orange */
}

.feature-icon.chart {
    background: rgba(255, 107, 53, 0.1); /* Light orange */
    color: #FF6B35 !important; /* Orange */
}

.feature-title {
    font-size: 20px !important;
    font-weight: 600 !important;
    color: #1F2937 !important; /* Navy */
    margin-bottom: 16px !important;
}

.feature-description {
    font-size: 16px !important;
    line-height: 1.6 !important;
    color: #6B7280 !important; /* Gray */
}

/* Footer */
.welcome-footer {
    padding: 32px 0;
    background: #F9F7F4; /* Cream background */
    border-top: 1px solid #E5E7EB;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.footer-left {
    color: #6B7280;
}

.footer-right {
    display: flex;
    gap: 24px;
}

.footer-link {
    color: #6B7280 !important;
    text-decoration: none !important;
    font-size: 14px !important;
}

.footer-link:hover {
    color: #1F2937 !important;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .hero-content {
        grid-template-columns: 1fr;
        gap: 40px;
        text-align: center;
    }

    .hero-title {
        font-size: 36px;
    }

    .features-grid {
        grid-template-columns: 1fr;
        gap: 32px;
    }

    .nav-content {
        padding: 0 16px;
    }

    .nav-links {
        gap: 4px;
    }

    .nav-link {
        padding: 6px 12px !important;
        font-size: 14px !important;
    }

    .get-started-btn {
        padding: 10px 20px !important;
        font-size: 14px !important;
    }

    .illustration-container {
        width: 300px;
        height: 240px;
    }

    .footer-content {
        flex-direction: column;
        gap: 16px;
        text-align: center;
    }

    .footer-right {
        gap: 16px;
    }
}
</style>

