    min-height: 300px;
}

.celebration-header {
    margin-bottom: 24px;
}

.celebration-title {
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1);
    background-size: 200% 200%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: bold;
    margin-bottom: 8px;
}

.level-up-text {
    font-weight: 600;
    margin-bottom: 8px;
}

